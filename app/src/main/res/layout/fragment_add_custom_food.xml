            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/protein_layout">

                <TextView
                    android:text="@string/protein_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/protein_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/protein_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/protein_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vitamina_layout">

                <TextView
                    android:text="@string/vitamina_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vitamina_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="10"
                    android:id="@+id/vitamina_field"
                    android:layout_weight="1"
                    android:hint="@string/vitamina_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vitaminc_layout">

                <TextView
                    android:text="@string/vitaminc_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vitaminc_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="10"
                    android:id="@+id/vitaminc_field"
                    android:layout_weight="1"
                    android:hint="@string/vitaminc_hint" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calcium_layout">

                <TextView
                    android:text="@string/calcium_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/calcium_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/calcium_hint"
                    android:ems="10"
                    android:id="@+id/calcium_field"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iron_layout">

                <TextView
                    android:text="@string/iron_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/iron_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/iron_hint"
                    android:ems="10"
                    android:id="@+id/iron_field"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/potassium_layout">

                <TextView
                    android:text="@string/potassium_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/potassium_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/potassium_hint"
                    android:ems="10"
                    android:id="@+id/potassium_field"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- finally a submit button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"
                android:text="Submit"
                android:layout_gravity="right"
                android:layout_margin="@dimen/submit_margin" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
