<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.stclaircollege.fitgrind.AddCustomFoodFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/food_name_layout">

                <TextView
                    android:text="@string/custom_food_name_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_name_label"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/food_name_field"
                    android:layout_weight="1"
                    android:hint="@string/food_hint_name"
                    android:inputType="text|textCapWords" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/serving_layout">

                <TextView
                    android:text="@string/custom_serving_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_serving_label"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/serving_size_field"
                    android:layout_weight="1"
                    android:hint="@string/servingsize_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/calorie_layout">

                <TextView
                    android:text="@string/custom_calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/calories_custom_label"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="10"
                    android:id="@+id/calories_field"
                    android:layout_weight="1"
                    android:hint="@string/calories_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sugar_layout">

                <TextView
                    android:text="@string/custom_sugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/custom_sugar_label"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="10"
                    android:id="@+id/sugar_field"
                    android:layout_weight="1"
                    android:hint="@string/sugar_hint"
                    android:layout_width="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalfat_layout">

                <TextView
                    android:text="@string/custom_totalfat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalfat_label"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal"
                    android:ems="10"
                    android:id="@+id/totalfat_field"
                    android:layout_weight="1"
                    android:hint="@string/totalfat_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/carbohydrate_layout">

                <TextView
                    android:text="@string/carbohydrate_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/carbohydrate_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/carbohydrate_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/carbohydrate_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saturatedfat_layout">

                <TextView
                    android:text="@string/saturatedfat_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/saturatedfat_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/saturatedfat_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/saturatedfat_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transfat_layout">

                <TextView
                    android:text="@string/transfat_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/transfat_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/transfat_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/transfat_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cholesterol_layout">

                <TextView
                    android:text="@string/cholesterol_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cholesterol_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/cholesterol_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/cholesterol_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sodium_layout">

                <TextView
                    android:text="@string/sodium_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/sodium_label"
                    android:gravity="center_horizontal"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/sodium_field"
                    android:layout_weight="1"
                    android:inputType="number|numberDecimal"
                    android:hint="@string/sodium_hint" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fiber_layout">

                <TextView
                    android:text="@string/fiber_label"
