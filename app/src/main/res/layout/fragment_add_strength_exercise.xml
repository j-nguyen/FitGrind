<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.stclaircollege.fitgrind.AddStrengthExerciseFragment"
    android:columnCount="2"
    android:useDefaultMargins="true">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="Exercise Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/strengthLabel"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/strengthEditText"
        android:layout_column="1" />

    <TextView
        android:text="Set(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setLabel"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/setEditText"
        android:layout_column="1" />

    <TextView
        android:text="Rep(s)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repLabel"
        android:layout_column="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:id="@+id/repEditText"
        android:layout_column="1"/>

    <Button
        android:text="Add Exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton"
        android:layout_columnSpan="2"
        android:layout_column="0" />

</GridLayout>
